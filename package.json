{
  "name": "sulog",
  "publisher": "qgg",
  "displayName": "sulog",
  "description": "super quick use console.log",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.92.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:sulog.insertConsole",
    "onCommand:sulog.sayHello"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "sulog.sayHello",
        "title": "Hello World",
        "category": "sulog"
      },
      {
        "command": "sulog.insertConsole",
        "title": "Insert Console Log",
        "category": "sulog"
      },
      {
        "command": "sulog.removeConsoles",
        "title": "Remove All Sulog Consoles",
        "category": "sulog"
      }
    ],
    "keybindings": [
      {
        "command": "sulog.insertConsole",
        "key": "cmd+shift+l",
        "mac": "cmd+shift+l",
        "when": "editorTextFocus"
      },
      {
        "command": "sulog.removeConsoles",
        "key": "cmd+shift+D",
        "mac": "cmd+shift+D",
        "when": "editorTextFocus"
      }
    ],
    "configuration": {
      "title": "Sulog Configuration",
      "properties": {
        "sulog.consoleShortcut": {
          "type": "string",
          "default": "cmd+shift+l",
          "description": "Custom shortcut for inserting console.log statement"
        },
        "sulog.consolePrefix": {
          "type": "string",
          "default": "【sulog】",
          "description": "Custom prefix for console.log statements"
        },
        "sulog.consoleTextColor": {
          "type": "string",
          "default": "#fff",
          "description": "Custom text color for console.log statements (CSS color value)"
        },
        "sulog.consoleBackgroundColor": {
          "type": "string",
          "default": "#ff4e20",
          "description": "Custom background color for console.log statements (CSS color value)"
        }
        
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.92.0",
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.11.0",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5",
    "ts-loader": "^9.5.1",
    "webpack": "^5.92.1",
    "webpack-cli": "^5.1.4",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0"
  }
}
